<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
  </head>
  <body>
	<h1>{{ title }}</h1>

	{{^loggedIn}}
		<a href="/_sys/auth/fb">Login with Facebook</a>
	{{/loggedIn}}

	{{#loggedIn}}
		{{^delete}}{{^err}}
			<em>{{curdir}}</em>

			<ul>
				{{^isRoot}}
					{{^isSecond}}
						<li><a href="/">/</a></li>
					{{/isSecond}}
					<li><a href="{{parent}}">..</a></li>
				{{/isRoot}}
				{{#folder}}
					<li><a href="{{.}}/">{{{.}}}</a></li>
				{{/folder}}
				{{#files}}
					<li><a href="/_sys/delete{{absolutePath}}/">[d]</a> <a href="{{absolutePath}}">{{fileName}}</a></li>
				{{/files}}
			</ul>

			<form action="/_sys/upload" method="POST" enctype="multipart/form-data">
				<input type="file" name="file">
				<input type="hidden" name="path" value="{{curdir}}">
				<input type="submit">
			</form>
		{{/err}}{{/delete}}
	{{/loggedIn}}

	{{#delete}}
		<a href="yes">Yes</a> | <a href="{{redirect}}/">Nope</a>
	{{/delete}}

	{{#err}}
		<p><b>{{err.stack}}</b></p>
	{{/err}}
  </body>
</html>